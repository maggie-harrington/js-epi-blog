{{#if updatePostForm}}
    <h3>Update {{post.headline}}</h3>
    <div>
      <form>
        <div class="form-group">
          <label for="headline">Headline</label>
          {{input value=headline id="headline" placeholder=post.headline}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=post.date}}
        </div>

        <div class="form-group">
          <label for="blurb">Blurb</label>
          {{input value=blurb id="blurb" placeholder=post.blurb}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=post.image}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=post.author}}
        </div>

        <div class="form-group">
          <label for="body">Body</label>
          {{input value=body id="body" placeholder=post.body}}
        </div>

        <!-- <div class="form-group">
          <label for="category">Category</label>
