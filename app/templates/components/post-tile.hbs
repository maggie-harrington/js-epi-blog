{{#link-to 'post' post.id}}
<div class="row">
  <div class="col-sm-6">
    <p><img src={{post.image}} alt={{post.category}}></p>
  </div>
  <div class="col-sm-6">
    <h3>{{post.headline}}</h3>
    <h4>By {{post.author}}</h4>
    <h5>Publish on {{post.date}}</h5>
    <p>{{post.blurb}}</p>


  </div>

</div>
{{/link-to}}
